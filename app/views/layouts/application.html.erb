<!DOCTYPE html>
<html>
  <head>
    <title>Kanban-roots</title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>

  <body>
    <div class="topbar-wrapper">
      <div class="topbar">
        <div class="topbar-inner">
          <div class="container">
            <h3><%= link_to 'Kanban-roots', root_path %></h3>
            <ul class="nav secondary-nav">
              <% if contributor_signed_in? %>
                <li><%= link_to current_contributor.username, contributor_path(current_contributor) %></li>
                <li><%= link_to 'Dashboard', root_path %></li>
                <li><%= link_to 'Sign out', destroy_contributor_session_path, :method => :delete %></li>
              <% else %>
                <li><%= link_to 'Sign up', new_contributor_registration_path %></li>
                <li><%= link_to 'Sign in', new_contributor_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <%- flash.each do |name, msg| -%>
          <% if msg.is_a?(String) %>
            <div class="alert-message <%= name %> fade in" data-alert="alert">
              <a class="close" href="#">Ã—</a>
              <p><%= msg %></p>
            </div>
          <% end -%>
        <%- end -%>
        <% if @project and @project.id %>
          <ul class="pills">
            <li><%= link_to 'Board', project_board_path(@project) %></li>
            <li><%= link_to 'New Task', new_project_task_path(@project) %></li>
            <li><%= link_to 'List Tasks', project_tasks_path(@project) %></li>
            <li><%= link_to 'Admin', edit_project_path(@project) %></li>
            <li><%= link_to 'Manage Categories', project_categories_path(@project) %></li>
            <%= yield :project_nav %>
          </ul>
        <% end %>

        <%= yield %>
      </div>

      <footer>
        <p>Kanban Roots &copy; 2011. Hugo Maia Vieira</p>
      </footer>
    </div>
  </body>
</html>

