<!DOCTYPE html>
<html>
  <head>
    <title>KanbanRoots</title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <% if contributor_signed_in? %>
      Hello <%= current_contributor.name %>. Not you?
      <%= link_to 'Sign out', destroy_contributor_session_path %>
    <% else %>
      <%= link_to 'Sign up', new_contributor_registration_path %> or
      <%= link_to 'Sign in', new_contributor_session_path %>
    <% end %>

    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>

    <%= yield %>

    <%= javascript_include_tag :defaults %>
  </body>
</html>

