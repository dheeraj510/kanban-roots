= form_for @developer do |f|
  -if @developer.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@developer.errors.count, "error")} prohibited this developer from being saved:"
      %ul
        - @developer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email, 'E-mail'
    = f.text_field :email
  .actions
    = f.submit 'Save'

