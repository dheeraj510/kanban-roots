%h1 Listing tasks

%table
  %tr
    %th Title
    %th Description
    %th Points
    %th Category
    %th Position
    %th
    %th
    %th

  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.description
      %td= task.points
      %td= task.category
      %td= task.position
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Task', new_task_path

