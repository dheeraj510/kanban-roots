%h1 Manage projects from "#{@team.name}"

= semantic_form_for @team do |f|
  -if @team.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :projects
  .actions
    = f.submit 'Save'

= link_to 'Back', team_path(@team)

