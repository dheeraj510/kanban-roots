- content_tag_for(:tr, resource, :class => cycle(:odd, :even)) do
  %td.name= h resource.try(:name)
  %td.description= h resource.try(:description)
  %td.start= h resource.try(:start)
  %td.end= h resource.try(:end)
  %td.actions
    = link_to t('application.show'), resource_path(resource)
    |
    = link_to t('application.edit'), edit_resource_path(resource)
    |
    = link_to t('application.destroy'), resource, :confirm => t('application.are_you_sure'), :method => :delete

